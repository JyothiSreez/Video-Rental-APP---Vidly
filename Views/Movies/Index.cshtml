@model Vidly1.ViewModels.DetailsMovieViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<h2>Movies</h2>


@if (Model.Movie.Count == 0)
{
    <text>There are no movies.</text>

}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>

            </tr>
        </thead>

        @foreach (var movie in Model.Movie)
        {

            <tbody>
                <tr>
                    <td>@Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.Id }, null)</td>

                </tr>
            </tbody>



        }
    </table>
}